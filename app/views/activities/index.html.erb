<div class="container">
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-dark rounded shadow-sm">
    <i class="fa fa-running fa-3x mr-3"></i>
    <span class= "mr-2" style="font-size: 35px;">
      <%=@activities.length.to_s%>
    </span>
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100">Activities</h6>
      <small>
      by 
      <%= current_user.full_name %>
      </small>
    </div>
      <%= link_to 'New Activity', new_activity_path, class: "btn btn-primary ml-auto" %>
  </div>

  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
       <% @activities.each do |activity| %>

    <div class="media text-muted pt-3">
     <a class="btn btn-dark mr-4 text-white">
     <%= activity.name[0,2].upcase%>
       </a>
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%= activity.name.split('_').map(&:capitalize).join(' ') %></strong>
        <%= activity.duration %> mininute
        <br/>
         <%= activity.date %>
        <p>
        <span>
            <a>
              <i class="fa fa-edit fa-1x fa-fw"></i>
              <%= link_to 'Edit', edit_activity_path(activity)%>
            </a>
            <a>
              <i class="fa fa-eye fa-1x fa-fw ml-2"></i>
              <%= link_to 'Show', activity %>
            </a>
            <a>
              <i class="fa fa-trash fa-1x fa-fw ml-2"></i>
              <%= link_to 'Delete', activity, method: :delete, data: { confirm: 'Are you sure?' } %>
            </a>
        </span>
        </p>
      </p>
    </div>
    <%end%>
  </div>
</div>
